@model ListBookDto
@{
    ViewData["Title"] = "Create";
}


<div class="container mt-3">
    <h2>Create author</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.postDtos.Name" class="form-label">Enter name</label>
            <input asp-for="@Model.postDtos.Name" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.postDtos.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.ImageFile" class="form-label">Book image</label>
            <input asp-for="@Model.postDtos.ImageFile" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.postDtos.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.Language" class="form-label">Enter language</label>
            <input asp-for="@Model.postDtos.Language" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.postDtos.Language"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.SalePrice" class="form-label">Enter sale price</label>
            <input asp-for="@Model.postDtos.SalePrice" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.postDtos.SalePrice"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.CostPrice" class="form-label">Enter cost price</label>
            <input asp-for="@Model.postDtos.CostPrice" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.postDtos.CostPrice"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.PageCount" class="form-label">Enter page count</label>
            <input asp-for="@Model.postDtos.PageCount" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.postDtos.PageCount"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.AuthorId" class="form-label">Select Author</label>
            <select asp-for="@Model.postDtos.AuthorId" class="form-select">
                @foreach (var item in Model.Authors.Items)
                {
                    <option value="@item.Id">@item.Name @item.Surname</option>
                }
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.AuthorId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.postDtos.GenreId" class="form-label">Select Genre</label>
            <select asp-for="@Model.postDtos.GenreId" class="form-select">
                @foreach (var item in Model.Genres.Items)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.postDtos.GenreId"></span>
        </div>
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
           
        </div>
    </form>
</div>