@model AuthorPostDto
@{
    ViewData["Title"] = "CreateAuthor";
}

<div class="container">
    <h2 class="mt-3">Create Author</h2>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Author Name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Surname" class="form-label">Author Surname</label>
            <input asp-for="@Model.Surname" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Surname"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Author image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>