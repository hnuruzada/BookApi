@model AuthorPostDto
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h3>Edit Genre Section</h3>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <form method="post" enctype="multipart/form-data" class="mt-3">
  <div class="mb-3">
    <label asp-for="@Model.Name" class="form-label">Author Name</label>
    <input  asp-for="@Model.Name" class="form-control" >
    <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Surname" class="form-label">Author Surname</label>
    <input  asp-for="@Model.Surname" class="form-control" >
    <span class="mt-2 text text-danger" asp-validation-for="@Model.Surname"></span>
  </div>
  <div class="mb-3">
    <label asp-for="@Model.ImageFile" class="form-label">Author Image</label>
    <input  asp-for="@Model.ImageFile" accept="image/*" class="form-control">
    <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
  </div>
  
  
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
</div>
